generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User_DB {
  id        Int       @id @default(autoincrement())
  user_id   String    @unique
  name      String
  email     String
  // 他のカラムも追加することができます
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // 仮予定との関連を定義
  Events Event_DB[]
}

model Event_DB {
  id               Int           @id @default(autoincrement())
  event_id         String        @unique
  title            String
  description      String?
  duration         Int           // 所要時間（必要に応じて追加）
  startSecureTime  DateTime      // 確保開始時間（必要に応じて追加）
  endSecureTime    DateTime      // 確保終了時間（必要に応じて追加）
  margin           Int?           // マージンの時間（必要に応じて追加）
  createdAt        DateTime       @default(now())
  // ユーザーとの関連を定義
  user             User_DB           @relation(fields: [user_id], references: [id])
  user_id           Int
  // 仮日程との関連を定義
  TimeSlots   TimeSlot_DB[]
}

model TimeSlot_DB {
  id                   Int       @id @default(autoincrement())
  TentativeDate_Id     String    @unique
  startTime            DateTime // 開始時間（必要に応じて追加）
  endTime              DateTime // 終了時間（必要に応じて追加）
  // 仮予定との関連を定義
  event    Event_DB   @relation(fields: [event_id], references: [id])
  event_id Int
}
