generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザーの情報は Supabase の auth.users に保存

model Event {
  id           String      @id 
  userId       String
  title        String
  // location は別テーブルでなくてよいか?
  locationName String
  TimeSlot     TimeSlot[]
  status       EventStatus
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

enum EventStatus {
  CONFIRMED
  TENTATIVE
}

model TimeSlot {
  id        String   @id
  startTime DateTime
  endTime   DateTime
  // Event が削除されたら TimeSlot も削除される
  Event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, startTime, endTime])
}
